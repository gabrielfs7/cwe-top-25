{% extends 'base/base.html.twig' %}
{% block title %}{{ cwe.id }}{% endblock %}
{% block content %}
<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <tr>
                <th>Rank</th>
                <td>{{ cwe.position }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ cwe.score }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cwe.description }}</td>
            </tr>
            <tr>
                <th>Definition</th>
                <td>
                    {% set cweLink = 'http://cwe.mitre.org/data/definitions/' ~ (cwe.id|replace({'CWE-': ''})) ~ '.html'%}
                    <a href="{{ cweLink }}">
                        {{ cweLink }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Solution</th>
                <td>
                    {% block solution %}{% endblock %}
                </td>
            </tr>
            <tr>
                <th>PHP Sample class</th>
                <td>
                    {{ sampleClass.name }}
                    <a href="javascript:void(0);" onclick="$('.sample-content').toggle();">
                        <i class="glyphicon glyphicon-eye-open"></i>
                    </a>
                    <div class="sample-content" style="display: none">
                        <pre>{{ sampleClass.content }}</pre>
                    </div>
                </td>
            </tr>
        </table>
        <h2>PHP Sample</h2>
        {% block subcontent %}{% endblock %}
    </div>
</div>
{% endblock %}